{
  "extends": "@repo/typescript-config/base.json",
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ],
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "jsx": "react-jsx",
    "rootDirs": [".", "./.react-router/types"],
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "ES2022",
    "paths": {
      "~/*": ["./app/*"]
    }
  }
}
